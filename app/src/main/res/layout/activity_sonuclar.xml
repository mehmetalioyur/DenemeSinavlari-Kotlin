<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
        tools:context=".SonuclarActivity"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/soru_sayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Soru Sayısı"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dogru_cevap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Doğru Cevap"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yanlis_cevao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Yanlış Cevap"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bos_cevap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Boş Sayısı"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/net_sayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Net Sayısı"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:onClick="siralamayaGitButton"
        android:layout_width="wrap_content"
        android:text="Sıralama"
        android:textAllCaps="false"
        android:textSize="26sp"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/finish_button_shape"></Button>
    <Button
        android:onClick="cevaplariInceleActivityGit"
        android:layout_width="wrap_content"
        android:text="Cevapları İncele"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/finish_button_shape"></Button>
    <Button
        android:onClick="yeniTestCoz"
        android:layout_width="wrap_content"
        android:text="Yeni Test Çöz"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/finish_button_shape"></Button>

</LinearLayout>